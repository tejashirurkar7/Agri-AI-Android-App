<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".FarmerRegisterActivity"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_arrow_back_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farmer Register"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textColor="@color/Green"
        android:id="@+id/txt4"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Name"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txt4"
        android:background="@drawable/edittextview"/>

    <Spinner
        android:id="@+id/spiiner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/username"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="false"
        android:background="@drawable/edittextview"
        />

    <Spinner
        android:id="@+id/spiiiner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/spiiner"
        android:background="@drawable/edittextview"/>


    <EditText
        android:id="@+id/mobileno"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Mobile No"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/spiiiner"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:textColorHint="@color/black"
        android:background="@drawable/edittextview"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Email"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mobileno"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:textColorHint="@color/black"
        android:background="@drawable/edittextview"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Password"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/email"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        android:background="@drawable/edittextview"/>

    <EditText
        android:id="@+id/cpassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Confirm Password"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/password"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:background="@drawable/edittextview"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/cpassword"
        android:background="@drawable/custombtn"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnsignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custombtn"
        android:text="Existing user! Go to Sign in page"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnsignup"
        android:textColor="@color/white"/>

</RelativeLayout>