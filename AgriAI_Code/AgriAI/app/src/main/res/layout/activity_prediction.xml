 <TextView
     android:id="@+id/districtLabel"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="District:"
     android:textSize="16sp"
     android:textStyle="bold"
     android:textColor="@color/Green"
     android:layout_marginTop="50dp"/>
 <Spinner
     android:id="@+id/citySpinner"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="8dp"
     android:background="@drawable/edittextview"
     android:textColor="@android:color/black"
     android:entries="@array/cities"
     android:layout_below="@+id/districtLabel"/>
 <TextView
     android:id="@+id/talukaLabel"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Taluka:"
     android:textSize="16sp"
     android:textStyle="bold"
     android:textColor="@color/Green"
     android:layout_below="@id/citySpinner"
     android:layout_marginTop="20dp"/>

 <Spinner
     android:id="@+id/townSpinner"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="8dp"
     android:background="@drawable/edittextview"
     android:textColor="@android:color/black"
     android:layout_below="@id/talukaLabel"/>

 <TextView
     android:id="@+id/weatherLabel"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Taluka:"
     android:textSize="16sp"
     android:textStyle="bold"
     android:textColor="@color/Green"
     android:layout_below="@id/townSpinner"
     android:layout_marginTop="20dp"/>

 <Spinner
     android:id="@+id/weatherEditText"
     android:layout_width="match_parent"
     android:layout_height="48dp"
     android:layout_below="@id/weatherLabel"
     android:layout_marginTop="8dp"
     android:background="@drawable/edittextview"
     android:textColor="@android:color/black"
     android:textSize="16sp"/>

